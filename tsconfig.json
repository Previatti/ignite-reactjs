{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],                                   
    "allowJs": true,                     
    "jsx": "react-jsx",                    
    "noEmit": true,                      
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,                         
    "moduleResolution": "node",          
    "allowSyntheticDefaultImports": true,        
    "esModuleInterop": true,                
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },
  "include": ["src"]
}
